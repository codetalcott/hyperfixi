{
  "name": "@lokascript/siren",
  "private": true,
  "version": "1.3.0",
  "description": "Siren hypermedia plugin for LokaScript â€” server affordances drive DOM behavior",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "@hyperfixi/core": "*",
    "siren-agent": "*"
  },
  "peerDependenciesMeta": {
    "siren-agent": {
      "optional": true
    }
  },
  "devDependencies": {
    "@hyperfixi/core": "*",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "keywords": [
    "lokascript",
    "hyperscript",
    "siren",
    "hypermedia",
    "hateoas",
    "plugin"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/siren"
  },
  "publishConfig": {
    "access": "public"
  }
}
