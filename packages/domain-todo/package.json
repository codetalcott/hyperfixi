{
  "name": "@lokascript/domain-todo",
  "version": "1.0.0",
  "description": "Natural language todo list management â€” example domain for the LokaScript framework",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist --noEmit false",
    "test": "vitest",
    "test:run": "vitest run",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lokascript/framework": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist",
    "src",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
