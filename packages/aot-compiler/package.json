{
  "name": "@hyperfixi/aot-compiler",
  "private": true,
  "version": "2.1.0",
  "description": "Ahead-of-Time compiler for LokaScript - transforms hyperscript to optimized JavaScript at build time",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./runtime": {
      "types": "./dist/runtime/aot-runtime.d.ts",
      "import": "./dist/runtime/aot-runtime.js",
      "require": "./dist/runtime/aot-runtime.cjs"
    }
  },
  "bin": {
    "hyperfixi-aot": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:check": "vitest run --reporter=dot 2>&1 | tail -5",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lokascript/framework": "*",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@hyperfixi/core": "*",
    "@lokascript/semantic": "*",
    "@types/node": "^20.11.0",
    "commander": "^14.0.3",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@hyperfixi/core": "*",
    "@lokascript/semantic": "*"
  },
  "peerDependenciesMeta": {
    "@hyperfixi/core": {
      "optional": true
    },
    "@lokascript/semantic": {
      "optional": true
    }
  },
  "keywords": [
    "hyperscript",
    "lokascript",
    "aot",
    "compiler",
    "build-time",
    "optimization"
  ],
  "author": "LokaScript Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codetalcott/hyperfixi.git",
    "directory": "packages/aot-compiler"
  },
  "bugs": {
    "url": "https://github.com/codetalcott/hyperfixi/issues"
  },
  "homepage": "https://github.com/codetalcott/hyperfixi/tree/main/packages/aot-compiler#readme"
}
